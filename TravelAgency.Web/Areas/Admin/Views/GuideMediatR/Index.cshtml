@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>CQRS MediatR Rehber Listesi</h1>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Açıklama</th>
                    <th>Image</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            sayac = @sayac + 1;
                        }
                        <td>@sayac</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.GuideName @item.GuideSurname</strong></td>
                        <td>@item.GuideDescription</td>
                        <td><img url "@item.ImageUrl" width="50" height="50" class="rounded-circle" /></td>
                        <td><a style="border:2px solid #000" href="/Admin/GuideMediatR/DeleteGuide/@item.GuideId" class="badge bg-label-danger me-1"><i class="bx bx-trash me-1"></i>Sil</td>
                        <td><a style="border:2px solid #000" href="/Admin/GuideMediatR/GetGuides/@item.GuideId" class="badge bg-label-info me-1"><i class="bx bx-edit-alt me-1"></i>Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/GuideMediatR/AddGuide" class="badge bg-label-info me-1" style="border:2px solid #000"><i class="bx bx-plus me-1"></i>Yeni Rehber Ekle</a>



