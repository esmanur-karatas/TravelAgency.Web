@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}



<h1>Rehber Listesi</h1>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Görsel</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            sayac = @sayac + 1;
                        }
                        <td>@sayac</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@item.GuideName @item.GuideSurname</strong></td>
                        <td><img src="@item.ImageUrl" height="50" width="50" class="rounded-circle" /> </td>
                        <td>@item.GuideDescription</td>
                          
                        @{
                            if (item.Status == true)
                            {
                                <td><a style="border:2px solid #000" href="/Admin/Guide/ChangeToFalse/@item.GuideId" class="badge bg-label-danger me-1"><i class="bx bx-x me-1"></i>Pasif Yap</td>

                            }
                            else
                            {
                                <td><a style="border:2px solid #000" href="/Admin/Guide/ChangeToTrue/@item.GuideId" class="badge bg-label-info me-1"><i class='bx bx-check'></i>Aktif Yap</a></td>
                            }
                        }
                        <td><a style="border:2px solid #000" href="/Admin/Guide/DeleteGuide/@item.GuideId" class="badge bg-label-danger me-1"><i class="bx bx-trash me-1"></i>Sil</td>
                        <td><a style="border:2px solid #000" href="/Admin/Guide/UpdateGuide/@item.GuideId" class="badge bg-label-info me-1"><i class="bx bx-edit-alt me-1"></i>Düzenle</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Guide/AddGuide" class="badge bg-label-info me-1" style="border:2px solid #000"><i class="bx bx-add me-1"></i>Yeni Rehber Ekle</a>







