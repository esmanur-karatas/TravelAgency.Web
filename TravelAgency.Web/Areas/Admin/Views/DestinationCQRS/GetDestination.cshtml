@model GetDestinationByIdQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Lokasyon Güncelle</h1>
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <small class="text-muted float-end">Güncelle</small>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x => x.DestinationId)
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">@Html.Label("Şehir")</label>
                        <input type="text" class="form-control" id="basic-default-fullname" asp-for="DestinationCity" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">@Html.Label("Fiyat")</label>
                        <input type="text" class="form-control" id="basic-default-company" asp-for="DestinationPrice" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">@Html.Label("Süre")</label>
                        <input type="text" id="basic-default-phone" class="form-control phone-mask" asp-for="DestinationDayNight" />
                    </div>

              
                   
                    <button class="badge bg-label-info me-1"><i class="bx bx-edit-alt me-1"></i>Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>





