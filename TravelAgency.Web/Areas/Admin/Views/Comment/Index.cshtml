@using EntityLayer.Concrete 
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Kullanıcı Yorumları</h1>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tarih</th>
                    <th>Kullanıcı</th>
                    <th>Rota</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            sayac = @sayac + 1;
                        }
                        <td>@sayac</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@item.CommentDate.ToString("dd-MMM-yyyy")</strong></td>
                        <td>@item.CommentUser</td>
                        <td>@item.Destination.DestinationCity</td>
                        <td><a style="border:2px solid #000" href="/Admin/Comment/DeleteComment/@item.CommentId" class="badge bg-label-danger me-1"><i class="bx bx-trash me-1"></i>Sil</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

