@model IEnumerable<BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    string scoreWord = " ";
}


<h1>Booking Otel Rezervasyon Sayfası</h1>
<h3>Arama Yapılan Şehir: Paris / Fransa</h3>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Otel Adı</th>
                    <th>Otel Puanı</th>
                    <th>Otel Değerlendirmesi</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            count = @count + 1;
                        }
                        <td>@count</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@item.name</strong></td>
                        <td>@item.reviewScore</td>
                        @{
                            if (item.reviewScoreWord == "Exceptional")
                            {
                                <td>Olağanüstü</td>
                            }

                            if (item.reviewScoreWord == "Fabulous")
                            {
                                <td>Efsanevi</td>
                            }

                            if (item.reviewScoreWord == "Superb")
                            {
                                <td>Muhteşem</td>
                            }

                            if (item.reviewScoreWord == "Very good")
                            {
                                <td>Çok Güzel</td>
                            }

                            if (item.reviewScoreWord == "Good")
                            {
                                <td>Güzel</td>
                            }
                        }
                        
                        <td><a style="border:2px solid #000" href="#" class="badge bg-label-primary me-1"><i class='bx bx-right-arrow-alt'></i>Detaylar</a></td>
                       </tr>
                }
            </tbody>
        </table>
    </div>
</div>

