@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Yeni Rol Ekle</h1>
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <small class="text-muted float-end">Ekle</small>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">@Html.Label("Role Adı ")</label>
                        <input type="text" class="form-control" id="basic-default-fullname" asp-for="RoleName" />
                    </div>

                    <button class="badge bg-label-info me-1"><i class="bx bx-send me-1"></i>Gönder</button>
                </form>
            </div>
        </div>
    </div>
</div>

