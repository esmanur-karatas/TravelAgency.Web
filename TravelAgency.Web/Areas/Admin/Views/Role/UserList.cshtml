@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<h1>Kullanıcı Listesi</h1>
<div class="card">
    <div class="table-responsive text-nowrap">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Rol Ata</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @foreach (var item in Model)
                    {
                        <tr>
                            @{
                                count = @count + 1;
                            }
                            <td>@count</td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@item.UserName</strong></td>
                            <td><a style="border:2px solid #000" href="/Admin/Role/AssignRole/@item.Id" class="badge bg-label-success me-1"><i class="bx bx-edit-alt me-1"></i>Role Ata</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <br />
            <div class="alert alert-success">
                <span>
                    Herhangi Bir Rol Bulunamadı.

                </span>
            </div>
        }
    </div>
</div>
<br />

<a href="/Admin/Role/CreateRole" class="badge bg-label-info me-1" style="border:2px solid #000"><i class="bx bx-plus me-1"></i>Yeni Role Ekle</a>

