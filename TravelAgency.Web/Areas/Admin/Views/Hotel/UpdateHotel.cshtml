@model EntityLayer.Concrete.Hotels
@{
    ViewData["Title"] = "UpdateHotel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Tur Rotasılarını Güncelle</h1>
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <small class="text-muted float-end">Güncelle</small>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x => x.HotelId)
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">@Html.Label("Otel İsmi")</label>
                        <input type="text" class="form-control" id="basic-default-fullname" asp-for="HotelCity" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">@Html.Label("Görsel Url")</label>
                        <input type="text" class="form-control" id="basic-default-fullname" asp-for="HotelImageUrl" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-email">@Html.Label("Açıklama")</label>
                        <div class="input-group input-group-merge">
                            <input type="text" id="basic-default-email" class="form-control" asp-for="HotelDescription" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">@Html.Label("Gece Gündüz")</label>
                        <input type="text" class="form-control" id="basic-default-company" asp-for="HotelDayNight" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">@Html.Label("Fiyat")</label>
                        <input type="text" id="basic-default-phone" class="form-control phone-mask" asp-for="HotelPrice" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">@Html.Label("Statu")</label>
                        <input type="text" id="basic-default-phone" class="form-control phone-mask" asp-for="HotelStatus" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">@Html.Label("Kapasite")</label>
                        <input type="text" id="basic-default-phone" class="form-control phone-mask" asp-for="HotelCapacity" />
                    </div>
                    <button class="badge bg-label-info me-1"><i class="bx bx-edit-alt me-1"></i>Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>


