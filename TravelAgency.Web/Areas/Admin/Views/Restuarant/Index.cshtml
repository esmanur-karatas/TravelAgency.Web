@using EntityLayer.Concrete
@model List<Restuarant>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Resturantlar</h1>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Restuarant Adı</th>
                    <th>Şehir</th>
                    <th>GörselUrl</th>
                    <th>Açıklama</th>
                    <th>Statüs</th>
                    <th>Sitede Gör</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            sayac = @sayac + 1;
                        }
                        <td>@sayac</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.RestuarantName</strong></td>
                        <td>@item.RestuarantCity</td>
                        <td>@item.RestuarantImageUrl</td>
                        <td>@item.RestuarantDescription</td>
                        <td>@item.RestuarantStatus</td>
                        <td><a style="border:2px solid #000" href="/Restuarant/RestuarantDetails/@item.RestuarantId" class="badge bg-label-success me-1"><i class='bx bx-low-vision'></i>Sitede Görüntüle</a></td>
                        <td><a style="border:2px solid #000" href="/Admin/Restuarant/DeleteRestuarant/@item.RestuarantId" class="badge bg-label-danger me-1"><i class="bx bx-trash me-1"></i>Sil</td>
                        <td><a style="border:2px solid #000" href="/Admin/Restuarant/UpdateRestuarant/@item.RestuarantId" class="badge bg-label-info me-1"><i class="bx bx-edit-alt me-1"></i>Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Restuarant/AddRestuarant" class="badge bg-label-info me-1" style="border:2px solid #000"><i class="bx bx-plus me-1"></i>Yeni Restuarant Ekle</a>

