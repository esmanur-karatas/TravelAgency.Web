@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Tur Rotaları</h1>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Süre</th>
                    <th>Kapasite</th>
                    <th>Sitede Gör</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            sayac = @sayac + 1;
                        }
                        <td>@sayac</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.DestinationCity</strong></td>
                        <td>@item.DestionationPrice</td>
                        <td>@item.DestionationDaysNight</td>
                        <td><a style="border:2px solid #000" src="/Admin/Destination/Delete/@item.DestinationId/" class="badge bg-label-primary me-1">@item.DestinationStatus</a></td>
                        <td><a style="border:2px solid #000" href="/Destination/DestinationDetails/@item.DestinationId" class="badge bg-label-success me-1"><i class='bx bx-low-vision'></i>Sitede Görüntüle</a></td>
                        <td><a style="border:2px solid #000" href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="badge bg-label-danger me-1"><i class="bx bx-trash me-1"></i>Sil</td>
                        <td><a style="border:2px solid #000" href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="badge bg-label-info me-1"><i class="bx bx-edit-alt me-1"></i>Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Destination/AddDestination" class="badge bg-label-info me-1" style="border:2px solid #000"><i class="bx bx-plus me-1"></i>Yeni Tur Rotası Ekle</a>

