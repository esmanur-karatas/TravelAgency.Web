@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}


<h1>Kullanıcı Geçmiş Rezervasyonları</h1>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Misafir Ad Soyad</th>
                    <th>Rota</th>
                    <th>Kişi Sayısı</th>
                    <th>Tarih</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    { sayac += 1; }
                    <tr>
                       
                        <td>@sayac</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>###</strong></td>
                        <td>@item.Destination.DestinationCity</td>
                        <td>@item.PersonCount</td>
                        <td>@item.ReservationDateTime.ToString("dd/MM/yyyy")</td>

                        <td><a style="border:2px solid #000" src="#" class="badge bg-label-primary me-1"><i class="bx bx-comment me-1"></i>Detaylar</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
