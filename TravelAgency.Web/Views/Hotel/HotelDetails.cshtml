@model EntityLayer.Concrete.Hotels
@{
    ViewData["Title"] = "HotelDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<body>
    <div class="hero-wrap js-fullheight" style="background-image: url('/direngine-master/images/bg_4.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
                <div class="col-md-9 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                    <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/Default/Index">Anasayfa</a></span> <span class="mr-2"><a href="blog.html">Tur Detayları</a></span></p>
                    <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Tur &amp; Detayları</h1>
                </div>
            </div>
        </div>
    </div>


    <section class="ftco-section ftco-degree-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ftco-animate">
                    <h2 class="mb-3">@Model.HotelCity</h2>
                    <p>@Model.HotelDescription</p>
                    <p>
                        <img src="@Model.HotelImageUrl" alt="" class="img-fluid">
                    </p>


                </div> <!-- .col-md-8 -->
              

            </div>
        </div>
    </section> <!-- .section -->

</body>


