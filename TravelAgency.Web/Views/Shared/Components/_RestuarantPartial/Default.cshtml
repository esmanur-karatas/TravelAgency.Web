@using EntityLayer.Concrete
@model List<Restuarant>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-start mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate">
                <span class="subheading">Özel Teklifler</span>
                <h2 class="mb-4"><strong>Popüler</strong> Resturantlar</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="destination">
                        <a href="#" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url(@item.RestuarantImageUrl);">
                            <div class="icon d-flex justify-content-center align-items-center">
                                <span class="icon-search2"></span>
                            </div>
                        </a>
                        <div class="text p-3">
                            <h3><a href="#">@item.RestuarantName</a></h3>
                            <p>@item.RestuarantDescription.Substring(0, 100)...</p>
                            <hr>
                            <p class="bottom-area d-flex">
                                <span><i class="icon-map-o"></i>@item.RestuarantCity</span>
                                <span class="ml-auto"><a href="/Restuarant/Index/@item.RestuarantId">Keşfet</a></span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>