
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    <form method="post" asp-action="AddComment" asp-controller="Comment" class="p-5 bg-light">
       <input type = "hidden" name="DestinationId" value = "@ViewBag.destId" />
        <div class="form-group">
            <label for="name">Ad-Soyad *</label>
            <input type="text" name="CommentUser" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="name">Destination Id *</label>
            <input type="text" name="DestinationId" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea id="message" name="CommentContent" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorumu Gönder" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>
